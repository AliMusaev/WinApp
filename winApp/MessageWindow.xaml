<Window x:Class="winApp.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:winApp"
        mc:Ignorable="d"
        Title="MessageWindow" Height="100" Width="200" ResizeMode="NoResize"  ShowInTaskbar="False" WindowStyle="None" WindowStartupLocation="CenterOwner" >
    <Grid Background="#FFD4D4D4">
        <TextBox x:Name="da" Height="50" FontSize="15" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent" IsReadOnly="True"></TextBox>
        <Button Name="button" Content="OK" VerticalAlignment="Bottom" Width="200" FontSize="15" Height="50" BorderThickness="0" HorizontalContentAlignment="Center" Click="Button_Click" 
                Background= "Transparent">
            
        </Button>
        
    </Grid>
</Window>
